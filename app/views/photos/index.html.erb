<h1>photo index view</h1>

<form action="<%= new_photo_path %>">
  <button 
    class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
    <i class="material-icons">add</i>
  </button>
</form>

<% @photos.each do |photo| %>
  <div class="photo-card mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">TODO photo caption <%= photo.original_name %></h2>
    </div>
    <div class="mdl-card__media mdl-card--expand">
      <img class="photo-img" src="<%= photo.url %>" />
    </div>
    <div class="mdl-card__supporting-text">
      TODO image description or story
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="<%= photo_url(photo) %>">
        View
      </a>
    </div>
  </div>
<% end %>
